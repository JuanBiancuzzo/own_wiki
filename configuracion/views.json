        {
            "nombre": "Facultad",
            "informacion": {
                "Carreras": { 
                    "tipo": "elementosTabla",
                    "tabla": "Carreras",
                    "referencias": [
                        {
                            "nombre": "url",
                            "view": "Carrera",
                            "parametros": { 
                                "idCarrera": "id" 
                            }
                        }
                    ]
                }
            },
            "bloqueTemplate": "facultad"
        }, 
        {
            "nombre": "Carrera",
            "requisitos": [ "idCarrera" ],
            "informacion": {
                "Carrera": {
                    "tipo": "elementoUnicoTabla", 
                    "tabla": "Carreras", 
                    "where": [
                        { "clave": "id", "equal": "idCarrera" }
                    ] 
                },
                "Materias": { 
                    "tipo": "elementosTabla", 
                    "tabla": "Materias", 
                    "where": [
                        { "clave": "refCarrera", "equal": "idCarrera" }
                    ],
                    "referencias": [
                        {
                            "nombre": "url",
                            "view": "Materia",
                            "parametros": { 
                                "idCarrera": "idCarrera", 
                                "idMateria": "id" 
                            }
                        }
                    ]
                },
                "MateriasEquivalente": { 
                    "tipo": "elementosTabla", 
                    "tabla": "MateriasEquivalentes", 
                    "where": [
                        { "clave": "refCarrera", "equal": "idCarrera" }
                    ],
                    "referencias": [
                        {
                            "nombre": "url",
                            "view": "Materia",
                            "parametros": { 
                                "idCarrera": "idCarrera", 
                                "idMateria": "refMateria" 
                            }
                        }
                    ]
                }
            },
            "bloqueTemplate": "carrera"
        }, 
        {
            "nombre": "Materia",
            "requisitos": [ "idCarrera", "idMateria" ],
            "informacion": {
                "Carrera": {
                    "tipo": "elementoUnicoTabla", 
                    "tabla": "Carreras", 
                    "where": [
                        { "clave": "id", "equal": "idCarrera" }
                    ] 
                },
                "Materia": {
                    "tipo": "elementoUnicoTabla", 
                    "tabla": "Materias", 
                    "where": [
                        { "clave": "id", "equal": "idMateria" }
                    ] 
                }, 
                "Temas": {
                    "tipo": "elementosTabla",
                    "tabla": "TemasMateria",
                    "where": [
                        { "clave": "refMateria", "equal": "idMateria" }
                    ] 
                }
            },
            "bloqueTemplate": "materia"
        }
    ]
