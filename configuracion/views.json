{
    "inicio": "Root",
    "templates": "./templates",
    "css": "./css",
    "views": [
        {
            "nombre": "Root",
            "bloqueTemplate": "index"
        },
        {
            "nombre": "Facultad",
            "informacion": {
                "Carreras": { 
                    "tipo": "ElementosCompleto",
                    "Carreras": {}
                }
            },
            "bloqueTemplate": "facultad"
        }, 
        {
            "nombre": "Carrera",
            "parametros": [ "idCarrera" ],
            "informacion": {
                "Carrera": {
                    "tipo": "ElementoUnico", 
                    "tabla": "Carreras", 
                    "id": "idCarrera"
                },
                "Materias": { 
                    "tipo": "ElementosParcial", 
                    "Materias": {
                        "condicion": "refCarrera == idCarrera",
                        "orderBy": [ 
                            "refCuatrimestre:anio=anio", 
                            "refCuatrimestre:cuatrimestre=cuatrimestre" 
                        ]
                    }, 
                    "MateriasEquivalente": {
                        "condicion": "refCarrera == idCarrera",
                        "orderBy": [ 
                            "refMateria:refCuatrimestre:anio=anio", 
                            "refMateria:refCuatrimestre:cuatrimestre=cuatrimestre" 
                        ]
                    },
                    "elementos": {
                        "nombrePedido": "endpoint",
                        "bloquesElementos": "bloqueMateria",
                        "cantidad": 5
                    }
                }
            },
            "bloqueTemplate": "carrera"
        }, 
        {
            "nombre": "Materia",
            "parametros": [ "idCarrera", "idMateria" ],
            "informacion": {
                "Carrera": {
                    "tipo": "ElementoUnico", 
                    "tabla": "Carreras", 
                    "id": "idCarrera"
                },
                "Materia": {
                    "tipo": "ElementoUnico", 
                    "tabla": "Materias",
                    "id": "idMateria"
                }, 
                "Temas": {
                    "tipo": "ElementosCompleto",
                    "TemasMateria": {
                        "condicion": "refMateria == idMateria",
                        "orderBy": [ "capitulo", "parte" ]
                    }
                }
            },
            "bloqueTemplate": "materia"
        },
        {
            "nombre": "TemaMateria",
            "parametros": [ "idCarrera", "idMateria", "idTema" ],
            "informacion": {
                "Carrera": {
                    "tipo": "ElementoUnico", 
                    "tabla": "Carreras", 
                    "id": "idCarrera"
                },
                "Materia": {
                    "tipo": "ElementoUnico", 
                    "tabla": "Materias", 
                    "id": "idMateria"
                }, 
                "Tema": {
                    "tipo": "ElementoUnico",
                    "tabla": "TemasMateria",
                    "id": "idTema"
                },
                "Notas": {
                    "tipo": "ElementosParcial",
                    "Notas": {
                        "condicion": "refVinculos:ref == idTema && refVinculos:tabla == 'TemasMateria'",
                        "orderBy": [ "nombre" ]
                    },
                    "elementos": {
                        "nombrePedido": "endpoint",
                        "bloqueElementos": "notas",
                        "cantidad": 15
                    }
                }
            },
            "bloqueTemplate": "temaMateria"
        }
    ]
}