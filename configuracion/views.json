{
    "inicio": "Root",
    "templates": "./templates",
    "css": "./css",
    "imagenes": "./imagenes",
    "views": [
        {
            "nombre": "Root",
            "bloqueTemplate": "index"
        },
        {
            "nombre": "Facultad",
            "informacion": [
                { 
                    "tipo": "ElementosCompleto",
                    "nombre": "Carreras",
                    "tablas": [
                        {
                            "tabla": "Carreras",
                            "claves": [ "id", "nombre" ]
                        }
                    ]
                }
            ],
            "bloqueTemplate": "facultad"
        }, 
        {
            "nombre": "Carrera",
            "parametros": [ "idCarrera" ],
            "informacion": [
                {
                    "tipo": "ElementoUnico", 
                    "nombre": "Carrera",
                    "tabla": "Carreras", 
                    "id": "idCarrera",
                    "claves": [ "nombre" ]
                },
                {
                    "tipo": "ElementosCompleto",
                    "nombre": "Planes",
                    "Materias": {
                        "claves": [ "refPlan:nombre" ]
                    },
                    "groupBy": [ "refPlan" ]
                },
                { 
                    "tipo": "ElementosCompleto", 
                    "nombre": "Materias",
                    "tablas": [
                        {
                            "tabla": "Materias",
                            "condicion": [ "refCarrera == idCarrera" ],
                            "orderBy": [ 
                                "refCuatrimestre:anio=anio", 
                                "refCuatrimestre:cuatrimestre=cuatrimestre" 
                            ],
                            "claves": [ "id", "nombre", "refCarrera:id", "refCuatrimestre:id", "refCuatrimestre:anio", "refCuatrimestre:cuatrimestre" ]
                        },
                        {
                            "tabla": "MateriasEquivalentes",
                            "condicion": [ "refCarrera == idCarrera" ],
                            "orderBy": [ 
                                "refMateria:refCuatrimestre:anio=anio", 
                                "refMateria:refCuatrimestre:cuatrimestre=cuatrimestre" 
                            ],
                            "claves": [ "nombre", "refCarrera:id", "refMateria:id", "refMateria:refCuatrimestre:id", "refMateria:refCuatrimestre:anio", "refMateria:refCuatrimestre:cuatrimestre" ]
                        }
                    ]
                }
            ],
            "bloqueTemplate": "carrera"
        }, 
        {
            "nombre": "Materia",
            "parametros": [ "idCarrera", "idMateria" ],
            "informacion": [
                {
                    "tipo": "ElementoUnico", 
                    "nombre": "Materia",
                    "tabla": "Materias",
                    "id": "idMateria",
                    "claves": [ "id", "nombre", "refCarrera:id", "refCarrera:nombre" ]
                }, 
                {
                    "tipo": "ElementosCompleto",
                    "nombre": "Temas",
                    "tablas": [
                        {
                            "tabla": "TemasMateria",
                            "condicion": [ "refMateria == idMateria" ],
                            "orderBy": [ "capitulo", "parte" ],
                            "claves": [ "id", "nombre", "capitulo", "parte" ]
                        }
                    ]
                }
            ],
            "bloqueTemplate": "materia"
        },
        {
            "nombre": "TemaMateria",
            "parametros": [ "idCarrera", "idMateria", "idTema" ],
            "informacion": [
                {
                    "tipo": "ElementoUnico",
                    "nombre": "Tema",
                    "tabla": "TemasMateria",
                    "id": "idTema",
                    "claves": [ "nombre", "refMateria:id", "refMateria:nombre", "refMateria:refCarrera:id", "refMateria:refCarrera:nombre" ]
                }
            ],
            "bloqueTemplate": "temaMateria"
        }
    ]
}