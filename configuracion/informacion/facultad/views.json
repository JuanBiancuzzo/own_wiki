{
    "nombre": "Facultad",
    "templates": [ "./facultad.html" ],
    "bloqueTemplate": "facultad",
    "endpoints": [
        {
            "nombre": "Carreras",
            "informacion": [
                { 
                    "tipo": "ElementosCompleto",
                    "nombre": "Carreras",
                    "tablas": [
                        {
                            "tabla": "Carreras",
                            "claves": [ "id", "nombre" ]
                        }
                    ]
                }
            ],
            "bloqueTemplate": "carreras"
        }, 
        {
            "nombre": "Materias",
            "parametros": [ "idCarrera" ],
            "informacion": [
                {
                    "tipo": "ElementoUnico", 
                    "nombre": "Carrera",
                    "tabla": "Carreras", 
                    "id": "idCarrera",
                    "claves": [ "nombre" ]
                },
                {
                    "tipo": "ElementosCompleto",
                    "nombre": "Planes",
                    "tablas": [
                        {
                            "tabla": "Materias",
                            "claves": [ "refPlan:nombre" ]
                        }
                    ],
                    "groupBy": [ "refPlan" ]
                },
                { 
                    "tipo": "ElementosCompleto", 
                    "nombre": "Materias",
                    "tablas": [
                        {
                            "tabla": "Materias",
                            "condicion": [ "refCarrera == idCarrera" ],
                            "claves": [ 
                                "id", "nombre", 
                                "refCarrera:id"
                            ]
                        },
                        {
                            "tabla": "MateriasEquivalentes",
                            "condicion": [ "refCarrera == idCarrera" ],
                            "claves": [ 
                                "nombre", 
                                "refCarrera:id", 
                                "refMateria:id"
                            ]
                        }
                    ], 
                    "orderBy": [ "anio", "cuatrimestre" ]
                }
            ],
            "bloqueTemplate": "materias"
        }, 
        {
            "nombre": "Temas",
            "parametros": [ "idCarrera", "idMateria" ],
            "informacion": [
                {
                    "tipo": "ElementoUnico", 
                    "nombre": "Materia",
                    "tabla": "Materias",
                    "id": "idMateria",
                    "claves": [ "id", "nombre", "refCarrera:id", "refCarrera:nombre" ]
                }, 
                {
                    "tipo": "ElementosCompleto",
                    "nombre": "Temas",
                    "tablas": [
                        {
                            "tabla": "TemasMateria",
                            "condicion": [ "refMateria == idMateria" ],
                            "claves": [ "id", "nombre", "capitulo", "parte" ]
                        }
                    ],
                    "orderBy": [ "capitulo", "parte" ]
                }
            ],
            "bloqueTemplate": "temas"
        },
        {
            "nombre": "Notas",
            "parametros": [ "idCarrera", "idMateria", "idTema" ],
            "informacion": [
                {
                    "tipo": "ElementoUnico",
                    "nombre": "Tema",
                    "tabla": "TemasMateria",
                    "id": "idTema",
                    "claves": [ "nombre", "refMateria:id", "refMateria:nombre", "refMateria:refCarrera:id", "refMateria:refCarrera:nombre" ]
                }
            ],
            "bloqueTemplate": "notas"
        }
    ]
